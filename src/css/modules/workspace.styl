.add-menu__form
   display flex
   flex-direction column
   align-items center
.add-menu__form--label
   font-size 25px
   margin-bottom 20px
   color #5b5b5b
.add-menu__form--input
   width 80%
   font-size 20px
   padding 15px 10px
   outline none
   background #12a9c4
   border 2px solid #0d9bbd
   margin-bottom 20px
   transition 0.3s
.add-menu__form--input::placeholder
   color #ffffff
.add-menu__form--input:hover, .add-menu__form--input:focus
   background #ffffff
   color black
   transition 0.3s
.btn
   font-weight 600
   color #fff
   font-size 16px
   text-transform uppercase
   width 250px
   height 50px
   border-radius 30px
   background rgb(30, 196, 221)
   border 2px solid #3de8fb
   transition 0.3s
   outline none
.btn:hover
   background #fff
   color black
   transition 0.3s
.error
   width 50%
   text-align center
   padding 20px
   border 1px solid red
   margin-top 15px
   margin-bottom 15px
   transition 0.3s
.error--text
   font-size 20px
   color black

